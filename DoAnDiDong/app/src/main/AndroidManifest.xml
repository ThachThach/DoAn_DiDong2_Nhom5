<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doandidong">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoAnDiDong">
        <activity android:name=".BanHangActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ThuChiActivity" android:screenOrientation="portrait"/>
        <activity android:name=".SanPhamActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".ThemNhanVien"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuanLyNhanVien"
            android:label="@string/title_activity_quan_ly_nhan_vien"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DoAnDiDong.NoActionBar" />
        <activity
            android:name=".SanPhamMoi"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BepBarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.layout.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>